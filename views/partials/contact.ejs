<div class="container">
  <!--title -->
  <h1 class="container pt-1"><%= title %></h1>
      <p class="text-center w-responsive mx-auto mb-5">Do you have any question? Please do not hesitate to contact me directly.</p>
  <div class="row">
    <!-- contact information -->
    <div class="column col-md-6 text-center">
        <div class="row">
            <div class="col-md-11">
                <img src="/Assets/images/foto.jpeg" alt="Image" class="contact-img">
            </div>
            <div class="col-md-11">
                <h2>Luz Adriana Ariza Bustos</h2>
                <p class="title">Software Engineer</p>
                <p><i class="fas fa-at 5x"></i> a-d-r-u@hotmail.com</p>
                <p></p><i class="fas fa-phone-alt"></i>  +1 (647) 745-8491</p>
            </div>
        </div>
    </div>
    <!-- form -->
    <div class="column col-md-6">
        <form action="home" class="row g-3 needs-validation" novalidate>
            <div class="col-md-6 position-relative">
              <label for="name" class="form-label">First name</label>
              <input type="text" class="form-control" id="firstName" required>
              <div class="valid-tooltip">
                Looks good!
              </div>
              <div class="invalid-tooltip">
                Please write your name.
              </div>
            </div>
            <div class="col-md-5 position-relative">
              <label for="lastName" class="form-label">Last name</label>
              <input type="text" class="form-control" id="lastName" required>
              <div class="valid-tooltip">
                Looks good!
              </div>
              <div class="invalid-tooltip">
                Please write your lastname
              </div>
            </div>
            <div class="col-md-6 position-relative">
              <label for="validationTooltipUsername" class="form-label">Email</label>
              <div class="input-group has-validation">
                <span class="input-group-text" id="validationTooltipUsernamePrepend">@</span>
                <input type="email" class="form-control" id="email" aria-describedby="validationTooltipUsernamePrepend" required>
                <div class="invalid-tooltip">
                  Please choose a valid email.
                </div>
                <div class="valid-tooltip">
                    Looks good!
                  </div>
              </div>
            </div>
            <div class="col-md-5 position-relative">
              <label for="phoneNumber" class="form-label">Contact number</label>
              <div class="input-group has-validation">
                <span class="input-group-text" id="validationTooltipUsernamePrepend"><i class="fas fa-phone-alt"></i></span>
                <input type="tel" class="form-control" id="phoneNumber" required>
                <div class="invalid-tooltip">
                  Please provide a valid number.
                </div>
                <div class="valid-tooltip">
                  Looks good!
                </div>
                </div>
            </div>
            <div class="col-md-6 position-relative">
              <label for="subject" class="form-label">Subject</label>
              <select class="form-select" id="subject" required>
                <option selected disabled value="">Choose...</option>
                <option>Colaboration</option>
                <option>Job opportunity</option>
                <option>Conect</option>
              </select>
              <div class="invalid-tooltip">
                Please select a valid state.
              </div>
              <div class="valid-tooltip">
                Looks good!
              </div>
            </div>
            <div class="col-md-11 position-relative">
                <label for="mail" class="form-label">Message</label>
                <textarea class="form-control" id="mail" rows="3"></textarea>
                <div class="invalid-tooltip">
                    Please leave a message.
                  </div>
                  <div class="valid-tooltip">
                    Looks good!
                  </div>
              </div>
            <div class="col-12">
              <button class="btn btn-primary" type="submit" onclick="get_data()">Send</button>
            </div>
          </form>
    </div>
  </div>